<h1>Majors</h1>

<table>
  <thead>
    <tr><th>ID</th><th>Name</th><th>Actions</th></tr>
  </thead>
  <tbody>
    {{#each majors}}
      <tr>
        <td>{{this.majorID}}</td>
        <td>{{this.name}}</td>
        <td>
          <!-- DELETE -->
          <a href="/majors/delete/{{this.majorID}}" onclick="return confirm('Delete this major?')">Delete</a>

          <!-- UPDATE FORM -->
          <form method="POST" action="/majors/update" style="margin-top: 5px;">
            <input type="hidden" name="majorID" value="{{this.majorID}}" />
            <input type="text" name="name" value="{{this.name}}" required />
            <button type="submit">Update</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<hr>

<h2>Add Major</h2>
<form action="/majors/add" method="POST">
  <input type="text" name="name" placeholder="Major Name" required>
  <button type="submit">Add</button>
</form>
