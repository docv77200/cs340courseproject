<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>ID</th><th>First Name</th><th>Last Name</th><th>Email</th><th>Class Standing</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each students}}
      <tr>
        <td>{{this.studentID}}</td>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.email}}</td>
        <td>{{this.classStanding}}</td>
        <td>
          <!-- DELETE -->
          <a href="/students/delete/{{this.studentID}}" onclick="return confirm('Delete this student?')">Delete</a>
          <a href="/students/delete-demo-student" class="btn btn-warning">Delete Demo Student</a>
          <!-- UPDATE FORM -->
          <form method="POST" action="/students/update" style="margin-top: 5px;">
            <input type="hidden" name="student_id" value="{{this.studentID}}" />
            <input type="text" name="first_name" value="{{this.firstName}}" required />
            <input type="text" name="last_name" value="{{this.lastName}}" required />
            <input type="email" name="email" value="{{this.email}}" required />
            <select name="class_standing">
              <option value="Freshman" {{#ifCond this.classStanding '==' 'Freshman'}}selected{{/ifCond}}>Freshman</option>
              <option value="Sophomore" {{#ifCond this.classStanding '==' 'Sophomore'}}selected{{/ifCond}}>Sophomore</option>
              <option value="Junior" {{#ifCond this.classStanding '==' 'Junior'}}selected{{/ifCond}}>Junior</option>
              <option value="Senior" {{#ifCond this.classStanding '==' 'Senior'}}selected{{/ifCond}}>Senior</option>
            </select>
            <button type="submit">Update</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<hr>

<h2>Add Student</h2>
<form action="/students/add" method="POST">
  <input type="text" name="firstName" placeholder="First Name" required>
  <input type="text" name="lastName" placeholder="Last Name" required>
  <input type="email" name="email" placeholder="Email" required>
  <select name="classStanding" required>
    <option disabled selected>Select Standing</option>
    <option value="Freshman">Freshman</option>
    <option value="Sophomore">Sophomore</option>
    <option value="Junior">Junior</option>
    <option value="Senior">Senior</option>
  </select>
  <button type="submit">Add</button>
</form>
